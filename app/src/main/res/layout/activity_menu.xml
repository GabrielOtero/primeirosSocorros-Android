<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="br.com.primeirossocorros.activity.MenuActivity"
    android:padding="@dimen/main_padding">


    <ImageView
        android:id="@+id/pt"
        android:layout_width="@dimen/menu_flag_size"
        android:layout_height="@dimen/menu_flag_size"
        android:src="@drawable/brazil_flag"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/es"
        android:layout_width="@dimen/menu_flag_size"
        android:layout_height="@dimen/menu_flag_size"
        android:src="@drawable/spain_flag"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/pt"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/en"
        android:layout_width="@dimen/menu_flag_size"
        android:layout_height="@dimen/menu_flag_size"
        android:src="@drawable/eua_flag"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/es"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/what"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/menu_story_size"
        android:maxWidth="@dimen/menu_story_size"
        android:src="@mipmap/blank_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seizure" />

    <TextView
        android:id="@+id/what_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what"
        android:textColor="@color/firstAidRed"
        android:textSize="@dimen/menu_font_size"
        app:layout_constraintBottom_toBottomOf="@id/what"
        app:layout_constraintLeft_toLeftOf="@id/what"
        app:layout_constraintRight_toRightOf="@id/what"
        app:layout_constraintTop_toTopOf="@id/what" />

    <ImageView
        android:id="@+id/trauma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/menu_story_size"
        android:maxWidth="@dimen/menu_story_size"
        android:src="@mipmap/blank_bg"
        app:layout_constraintLeft_toLeftOf="@id/what"
        app:layout_constraintRight_toRightOf="@id/choking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fainting"/>

    <TextView
        android:id="@+id/trauma_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trauma"
        android:textColor="@color/firstAidRed"
        android:textSize="@dimen/menu_font_size"
        app:layout_constraintBottom_toBottomOf="@id/trauma"
        app:layout_constraintLeft_toLeftOf="@id/trauma"
        app:layout_constraintRight_toRightOf="@id/trauma"
        app:layout_constraintTop_toTopOf="@id/trauma" />

    <ImageView
        android:id="@+id/choking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/menu_story_size"
        android:maxWidth="@dimen/menu_story_size"
        android:src="@mipmap/blank_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/arrest" />

    <TextView
        android:id="@+id/choking_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choking"
        android:textColor="@color/firstAidRed"
        android:textSize="@dimen/menu_font_size"
        app:layout_constraintBottom_toBottomOf="@id/choking"
        app:layout_constraintLeft_toLeftOf="@id/choking"
        app:layout_constraintRight_toRightOf="@id/choking"
        app:layout_constraintTop_toTopOf="@id/choking" />

    <ImageView
        android:id="@+id/seizure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/menu_story_size"
        android:maxWidth="@dimen/menu_story_size"
        android:src="@mipmap/blank_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/what"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/seizure_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seizure"
        android:textColor="@color/firstAidRed"
        android:textSize="@dimen/menu_font_size"
        app:layout_constraintBottom_toBottomOf="@id/seizure"
        app:layout_constraintLeft_toLeftOf="@id/seizure"
        app:layout_constraintRight_toRightOf="@id/seizure"
        app:layout_constraintTop_toTopOf="@id/seizure" />

    <ImageView
        android:id="@+id/fainting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/menu_story_size"
        android:maxWidth="@dimen/menu_story_size"
        android:src="@mipmap/blank_bg"
        app:layout_constraintLeft_toLeftOf="@id/seizure"
        app:layout_constraintRight_toRightOf="@id/arrest"
        app:layout_constraintTop_toBottomOf="@id/trauma"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/fainting_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fainting"
        android:textColor="@color/firstAidRed"
        android:textSize="@dimen/menu_font_size"
        app:layout_constraintBottom_toBottomOf="@id/fainting"
        app:layout_constraintLeft_toLeftOf="@id/fainting"
        app:layout_constraintRight_toRightOf="@id/fainting"
        app:layout_constraintTop_toTopOf="@id/fainting" />

    <ImageView
        android:id="@+id/arrest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/menu_story_size"
        android:maxWidth="@dimen/menu_story_size"
        android:src="@mipmap/blank_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choking"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/arrest_label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:gravity="center"
        android:text="@string/arrest"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/firstAidRed"
        android:textSize="@dimen/menu_font_size"
        app:layout_constraintBottom_toBottomOf="@id/arrest"
        app:layout_constraintLeft_toLeftOf="@id/arrest"
        app:layout_constraintRight_toRightOf="@id/arrest"
        app:layout_constraintTop_toTopOf="@id/arrest" />

</android.support.constraint.ConstraintLayout>
