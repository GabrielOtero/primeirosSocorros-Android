<?xml version="1.0" encoding="utf-8"?>
<br.unicamp.primeirossocorros.QuestionLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/q1_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_quizz"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/label_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sed nec mattis sapien, id pretium nisl?"
        android:textColor="@color/purple"
        android:lineSpacingExtra="12dp"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/label_question">

        <RadioButton
            android:id="@+id/opt1_check"
            android:textColor="@color/purple"
            fontPath="fonts/HumanistLight.otf"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morbi commodo pharetra vulputate" />

        <RadioButton
            android:id="@+id/opt2_check"
            android:textColor="@color/purple"
            fontPath="fonts/HumanistLight.otf"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phasellus faucibus urna enim" />

        <RadioButton
            android:id="@+id/opt3_check"
            android:textColor="@color/purple"
            fontPath="fonts/HumanistLight.otf"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Praesent congue mollis magna at aliquet" />

        <RadioButton
            android:id="@+id/opt4_check"
            android:textColor="@color/purple"
            fontPath="fonts/HumanistLight.otf"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sed tempor purus ut nunc congue sodales" />

    </RadioGroup>

    <TextView
        android:id="@+id/feedback_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_question"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="0dp"
        android:rotation="-25"
        android:visibility="gone"
        android:textSize="30dp"
        android:text="CORRETO!"/>
</br.unicamp.primeirossocorros.QuestionLayout>